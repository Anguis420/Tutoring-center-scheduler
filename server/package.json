{
  "name": "tutoring-center-scheduler",
  "version": "1.0.0",
  "description": "Comprehensive web-based scheduling platform for tutoring centers",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:netlify": "cd client && npm run build:netlify",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "netlify-build": "npm run install-client && npm run build:netlify",
    "seed": "node server/scripts/seed-demo-data.js",
    "test": "jest --config=tests/jest.config.js",
    "test:watch": "jest --watch --config=tests/jest.config.js",
    "test:appointments": "jest tests/routes/appointments.test.js tests/models/appointment.test.js --config=tests/jest.config.js",
    "test:coverage": "jest --coverage --config=tests/jest.config.js"
  },
  "keywords": [
    "tutoring",
    "scheduling",
    "education",
    "nodejs",
    "react",
    "mongoose"
  ],
  "author": "Tutoring Center Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
