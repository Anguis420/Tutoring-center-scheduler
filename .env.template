# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/tutoring-center-scheduler
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/tutoring-center-scheduler

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=24h

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Comma-separated list of allowed origins for CORS (production only)
# Example: https://yourdomain.com,https://anotherdomain.com
ALLOWED_ORIGINS=https://friendly-moonbeam-85bd7c.netlify.app,https://classy-tiramify-5871d3.netlify.app,https://horologeist.netlify.app,https://horologiest.netlify.app

# Optional: Email Service (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: File Upload
# 5 MB
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads