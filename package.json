{
  "name": "tutoring-center-scheduler",
  "version": "1.0.0",
  "description": "Comprehensive web-based scheduling platform for tutoring centers",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:client": "cd client && npm start",
    "dev:server": "nodemon server.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "build:client": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install:all": "npm install && npm run install-client",
    "test": "cd client && npm test",
    "test:client": "cd client && npm test",
    "test:server": "echo \"No server tests configured yet\"",
    "lint": "cd client && npm run lint",
    "lint:fix": "cd client && npm run lint:fix",
    "clean": "rm -rf client/build client/node_modules node_modules",
    "clean:build": "rm -rf client/build",
    "heroku-postbuild": "npm run install-client && npm run build",
    "seed": "node scripts/seed-demo-data.js",
    "seed:reset": "node scripts/seed-demo-data.js && echo \"Database reset complete\"",
    "setup": "npm run install:all && npm run seed"
  },
  "keywords": [
    "tutoring",
    "scheduling",
    "education",
    "nodejs",
    "react",
    "mongodb"
  ],
  "author": "Tutoring Center Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 