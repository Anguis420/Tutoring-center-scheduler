{
  "name": "tutoring-center-scheduler",
  "version": "1.0.0",
  "description": "Comprehensive web-based scheduling platform for tutoring centers",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:netlify": "cd client && npm run build:netlify",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "netlify-build": "npm run install-client && npm run build:netlify",
    "seed": "node scripts/seed-demo-data.js"
  },
  "keywords": [
    "tutoring",
    "scheduling",
    "education",
    "nodejs",
    "react",
    "mongodb"
  ],
  "author": "Tutoring Center Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 