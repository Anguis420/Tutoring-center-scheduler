# Development Environment Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection (Local Development)
MONGODB_URI=mongodb://localhost:27017/tutoring-center-scheduler

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=24h

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Development)
# Allow localhost for development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Client Configuration
REACT_APP_API_URL=http://localhost:3001/api

# Optional: Email Service (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: File Upload
# 5 MB
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Test Database (for running tests)
MONGODB_TEST_URI=mongodb://localhost:27017/tutoring_test

# Test User Credentials
TEST_PARENT_EMAIL=parent@tutoring.com
TEST_PARENT_PASSWORD=parent123
